{
	"include": ["lib/**/*"],
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist/types",
		"declarationMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	}
}
